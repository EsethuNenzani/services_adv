<% content_for :body_content_title do %>
  <%= @gallery.name %>
<% end %>

<% content_for :body do %>
  <% if @gallery.items.present? %>
      <div class="gallery-isotope" id="lightgallery">
        <% @gallery.items.each do |item| %>
          <div class="col-sm-12 col-md-3 gallery-item">
            <%= link_to(image_fu(item.image, "300x",:class => "img-fluid"), item.image.url, :rel => 'group1', :class => "item") %>
          </div>
        <% end %>
      </div>
  <% else %>
      No images available
  <% end %>

<% end %>

<% content_for :side_body do %>

<% end %>

<%= render '/refinery/content_page' %>
