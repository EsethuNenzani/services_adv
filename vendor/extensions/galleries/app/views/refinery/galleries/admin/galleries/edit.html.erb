
<div class="add-images-panel-container" style="display:none;">
  <div class="file-drop-area">
    <label for="files">Drop your files here to upload</label>
    <input name="files[]" id="files" type="file" multiple >
  </div>
  <div id="slim-containers">
    <!-- Slim image croppers are laoded here -->
  </div>
  <div style="text-align: center;">
    <h3>OR</h3>
  </div>
  <div class="all-images"></div>
</div>

<div class="gallery-container" data-gallery-id="<%= @gallery.slug %>">
  <%= render 'form' %>
</div>

<%= content_for :stylesheets do %>
  <link rel="stylesheet" media="screen" href="/stylesheet/gallery.css">
  <link rel="stylesheet" media="screen" href="/stylesheet/slim.min.css">
<% end %>

<%= content_for :javascripts do %>
  <script src="/javascript/image_uploader.js"></script>
  <script src="/javascript/slim.kickstart.js"></script>
  <script src="/javascript/slim.jquery.js"></script>
<% end %>


