<ul>
  <% if ::Refinery::Pods::Admin::PodsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pods_admin_pods_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pods_admin_pod_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Pods::Admin::PodsController.sortable? && ::Refinery::Pods::Pod.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pods_admin_pods_path,
                     t('.reorder', what:  "Pods"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pods_admin_pods_path,
                      t('.reorder_done', what: "Pods"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
