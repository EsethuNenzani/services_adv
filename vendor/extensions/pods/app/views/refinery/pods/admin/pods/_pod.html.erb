<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(pod) -%>">
  <span class='title'>
    <%= pod.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_pods_admin_pod_path(pod), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.pods_admin_pod_path(pod), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: pod.name)}}  ) %>
  </span>
</li>
