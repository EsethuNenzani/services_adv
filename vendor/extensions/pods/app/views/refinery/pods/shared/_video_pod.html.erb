<% if pod.video_url.present? %>
  <div class="side_pod video_pod single_image">
    <a class="item" href="<%= pod.video_url.gsub('https://youtu.be/', 'https://www.youtube.com/watch?v=') %>">
      <% if pod.image.present? %>
        <%= image_fu pod.image, '350x280', :class => "img-fluid" %>
        <img class="img-fluid" data-src="<%= pod.video_url.gsub("youtu.be/","img.youtube.com/vi/") + "/0.jpg" %>">
      <% else %>
        <img class="img-fluid" data-src="<%= pod.video_url.gsub("youtu.be/","img.youtube.com/vi/") + "/0.jpg" %>">
      <% end %>
      <img src="/assets/playbtn.png" class="playbtn">
    </a>
  </div>
<% end %>